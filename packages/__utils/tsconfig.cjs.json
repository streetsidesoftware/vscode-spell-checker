{
    "extends": "@tsconfig/node18",
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist/cjs",
        "types": ["node"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["**/*.mts"]
}
