{
    "extends": "@tsconfig/node18",
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist/esm",
        "lib": ["es2023", "dom"],
        "types": ["node"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "strict": true
    },
    "include": ["src"]
}
