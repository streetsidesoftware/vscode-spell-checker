{
    "extends": "@tsconfig/node18",
    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "target": "es2022",
        "lib": ["es2022", "dom"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "strict": true
    },
    "include": ["src"],
    "references": [{ "path": "../tsconfig.esm.json" }]
}
