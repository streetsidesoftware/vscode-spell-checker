{
  "name": "json-rpc-api",
  "private": true,
  "version": "1.0.0",
  "description": "Make JSON-RPC calls ",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "build": "npm run build:tsc && npm run build:ts2mjs",
    "build:tsc": "tsc -b tsconfig.json",
    "build:ts2mjs": "ts2mjs dist/esm",
    "build-production": "npm run clean && npm run build",
    "watch": "concurrently npm:watch:*",
    "watch:tsc": "tsc -b tsconfig.json --watch",
    "watch:ts2mjs": "chokidar \"dist/esm/**/*.js\" -c \"ts2mjs dist/esm\"",
    "clean": "shx rm -rf dist",
    "coverage": "vitest run --coverage",
    "test": "vitest run"
  },
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    }
  },
  "keywords": [
    "json-rpc",
    "webviews",
    "vscode"
  ],
  "author": "Street Side Software",
  "license": "MIT",
  "dependencies": {
    "utils-disposables": "file:../utils-disposables",
    "utils-logger": "file:../utils-logger",
    "vscode-jsonrpc": "^8.2.0"
  },
  "files": [
    "dist",
    "!dist/**/*.map",
    "!dist/**/*.test.*",
    "!dist/**/test/**",
    "!dist/esm/**/*.js",
    "!dist/esm/**/*.ts"
  ],
  "engines": {
    "node": ">18.0.0"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.2",
    "@types/vscode": "^1.84.2"
  }
}
