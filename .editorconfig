root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.CRLF.txt]
end_of_line = crlf

[*.noEOL.txt]
insert_final_newline = false

[*.{yaml,yml}]
indent_size = 2

[{package*.json,lerna.json}]
indent_size = 2

[.github/integrations.json]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[config.json]
indent_size = 2

[*.tsx]
indent_size = 2
